
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "UserProfile", FormMethod.Post))
{@Html.AntiForgeryToken()

<form>
    <table>
        <tr>
            <td>USerId</td>
            <td>@Html.TextBox("UserId")</td>
        </tr>
        <tr>
            <td>Username</td>
            <td>@Html.TextBox("Username")</td>
        </tr>
        <tr>

            <td>Password</td>
            <td>@Html.TextBox("Password")</td>
        </tr>
        <tr>

            <td>Status</td>
            <td>
                @Html.DropDownList("IsActive", new List<SelectListItem>
           {
               new SelectListItem{Text="ON",Value="ON"},
               new SelectListItem{Text="OFF",Value="OFF"}

           }, "Select IsActive", new { @class = "form-control" })
            </td>
        </tr>
        <tr>

            <td colspan="2"><input type="submit" value="submit" /></td>
        </tr>
    </table>
</form>
}


